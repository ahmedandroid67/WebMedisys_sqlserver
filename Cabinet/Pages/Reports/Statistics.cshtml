@page
@model Cabinet.Pages.Reports.StatisticsModel
@{
    ViewData["Title"] = "Statistiques Avancées";
}

@section Styles {
    <style>
        .stat-card {
            border-radius: 15px;
            border: none;
            transition: all 0.3s;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            height: 100%;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: 700;
            line-height: 1;
        }

        .stat-label {
            font-size: 0.9rem;
            opacity: 0.9;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .chart-card {
            background: var(--card-bg, white);
            border-radius: 15px;
            padding: 1.5rem;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            margin-bottom: 2rem;
            border: 1px solid var(--border-color, #e2e8f0);
            color: var(--text-primary);
        }

        .bg-gradient-primary { background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%); }
        .bg-gradient-success { background: linear-gradient(135deg, #10b981 0%, #059669 100%); }
        .bg-gradient-info { background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%); }
        .bg-gradient-warning { background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); }

        .chart-container {
            position: relative;
            height: 300px;
        }

        .section-title {
            font-size: 1.3rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            color: var(--text-primary);
        }

        /* Print Styles */
        @@media print {
            .btn-success, .btn-outline-primary, .navbar, .footer, .sidebar, .mb-4:has(h2) {
                display: none !important;
            }
            .container-fluid {
                padding: 0 !important;
            }
            .card, .chart-card {
                box-shadow: none !important;
                border: 1px solid #ddd !important;
                break-inside: avoid;
            }
            .print-header {
                display: block !important;
                margin-bottom: 2rem;
                border-bottom: 2px solid #333;
                padding-bottom: 1rem;
            }
        }

        .print-header {
            display: none;
        }
    </style>
}

<div class="container-fluid px-4 pb-5">
    <!-- Print Header (Cabinet Info) -->
    <div class="print-header">
        <div class="row align-items-center">
            <div class="col-8">
                <h2 class="fw-bold text-primary mb-1">@Model.CabinetInfo?.DrName</h2>
                <h5 class="text-secondary mb-3">@Model.CabinetInfo?.Speciality</h5>
                <div class="small text-muted">
                    <p class="mb-0"><i class="fa-solid fa-location-dot me-2"></i>@Model.CabinetInfo?.Address</p>
                    <p class="mb-0"><i class="fa-solid fa-phone me-2"></i>@Model.CabinetInfo?.Phone | <i class="fa-solid fa-envelope me-2"></i>@Model.CabinetInfo?.Email</p>
                </div>
            </div>
            <div class="col-4 text-end">
                <div class="h3 fw-bold text-uppercase border p-3 bg-light">
                    Statistiques Globales
                </div>
                <div class="text-muted mt-2">
                    Date du rapport: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                </div>
            </div>
        </div>
    </div>

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0">
                <i class="fa-solid fa-chart-pie text-primary me-2"></i>
                Statistiques Avancées
            </h2>
            <p class="text-muted small mb-0">Vue d'ensemble complète de votre cabinet médical</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-page-handler="ExportExcel" class="btn btn-success">
                <i class="fa-solid fa-file-excel me-2"></i>Export Excel
            </a>
            <button class="btn btn-outline-primary" onclick="window.print()">
                <i class="fa-solid fa-print me-2"></i>Imprimer
            </button>
        </div>
    </div>

    <!-- Quick Stats Row -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card stat-card bg-gradient-primary text-white">
                <div class="card-body">
                    <div class="stat-label mb-2">Total Patients</div>
                    <div class="stat-number">@Model.TotalPatients</div>
                    <small class="opacity-75">
                        <i class="fa-solid fa-user-plus me-1"></i>
                        +@Model.NewPatientsThisMonth ce mois
                    </small>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card stat-card bg-gradient-success text-white">
                <div class="card-body">
                    <div class="stat-label mb-2">Consultations (Mois)</div>
                    <div class="stat-number">@Model.TotalConsultationsThisMonth</div>
                    <small class="opacity-75">
                        <i class="fa-solid fa-calendar-day me-1"></i>
                        @Model.TotalConsultationsToday aujourd'hui
                    </small>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card stat-card bg-gradient-info text-white">
                <div class="card-body">
                    <div class="stat-label mb-2">Revenu (Mois)</div>
                    <div class="stat-number">@Model.RevenueThisMonth.ToString("N0")</div>
                    <small class="opacity-75">DH</small>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card stat-card bg-gradient-warning text-white">
                <div class="card-body">
                    <div class="stat-label mb-2">Prix Moyen</div>
                    <div class="stat-number">@Model.AverageConsultationPrice.ToString("N0")</div>
                    <small class="opacity-75">DH / consultation</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row 1 -->
    <div class="row mb-4">
        <!-- Consultations Trend -->
        <div class="col-md-8 mb-3">
            <div class="chart-card">
                <h5 class="section-title">
                    <i class="fa-solid fa-chart-line text-primary me-2"></i>
                    Évolution des Consultations (12 derniers mois)
                </h5>
                <div class="chart-container">
                    <canvas id="consultationsTrendChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Patient Gender Distribution -->
        <div class="col-md-4 mb-3">
            <div class="chart-card">
                <h5 class="section-title">
                    <i class="fa-solid fa-venus-mars text-info me-2"></i>
                    Répartition par Sexe
                </h5>
                <div class="chart-container">
                    <canvas id="genderChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row 2 -->
    <div class="row mb-4">
        <!-- Age Groups -->
        <div class="col-md-6 mb-3">
            <div class="chart-card">
                <h5 class="section-title">
                    <i class="fa-solid fa-users text-success me-2"></i>
                    Patients par Tranche d'Âge
                </h5>
                <div class="chart-container">
                    <canvas id="ageGroupChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Top Services -->
        <div class="col-md-6 mb-3">
            <div class="chart-card">
                <h5 class="section-title">
                    <i class="fa-solid fa-star text-warning me-2"></i>
                    Top 10 Services
                </h5>
                <div class="chart-container">
                    <canvas id="topServicesChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Stock Alerts & Top Services Tables -->
    <div class="row">
        <!-- Low Stock Alert -->
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="fa-solid fa-triangle-exclamation me-2"></i>
                        Alertes Stock Bas (@Model.LowStockProducts produits)
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Produit</th>
                                    <th class="text-center">Quantité</th>
                                    <th class="text-center">Seuil</th>
                                    <th class="text-center">Statut</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.LowStockItems)
                                {
                                    <tr>
                                        <td class="fw-bold">@item.ProductName</td>
                                        <td class="text-center">
                                            <span class="badge @(item.Quantity == 0 ? "bg-danger" : "bg-warning")">
                                                @item.Quantity
                                            </span>
                                        </td>
                                        <td class="text-center text-muted">@item.AlertLevel</td>
                                        <td class="text-center">
                                            @if (item.Quantity == 0)
                                            {
                                                <span class="badge bg-danger">Rupture</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">Faible</span>
                                            }
                                        </td>
                                    </tr>
                                }
                                @if (!Model.LowStockItems.Any())
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-success py-4">
                                            <i class="fa-solid fa-check-circle fa-2x mb-2"></i>
                                            <p class="mb-0">Stock optimal</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Top Services Table -->
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fa-solid fa-trophy me-2"></i>
                        Services les Plus Demandés
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Service</th>
                                    <th class="text-center">Consultations</th>
                                    <th class="text-end">Revenu</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var service in Model.TopServices)
                                {
                                    <tr>
                                        <td class="fw-bold">@service.ServiceName</td>
                                        <td class="text-center">
                                            <span class="badge bg-info">@service.Count</span>
                                        </td>
                                        <td class="text-end text-success fw-bold">@service.Revenue.ToString("N2") DH</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Consultations Trend Chart
        const consultationsTrendCtx = document.getElementById('consultationsTrendChart').getContext('2d');
        const consultationsData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.ConsultationsByMonth, new System.Text.Json.JsonSerializerOptions { PropertyNamingPolicy = null }));
        
        new Chart(consultationsTrendCtx, {
            type: 'line',
            data: {
                labels: consultationsData.map(d => d.MonthName),
                datasets: [{
                    label: 'Consultations',
                    data: consultationsData.map(d => d.Count),
                    borderColor: '#667eea',
                    backgroundColor: 'rgba(102, 126, 234, 0.1)',
                    fill: true,
                    tension: 0.4,
                    borderWidth: 3
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });

        // Gender Chart
        const genderCtx = document.getElementById('genderChart').getContext('2d');
        const genderData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.PatientsByGender, new System.Text.Json.JsonSerializerOptions { PropertyNamingPolicy = null }));
        
        new Chart(genderCtx, {
            type: 'doughnut',
            data: {
                labels: Object.keys(genderData),
                datasets: [{
                    data: Object.values(genderData),
                    backgroundColor: ['#3b82f6', '#ec4899', '#8b5cf6'],
                    borderWidth: 2,
                    borderColor: '#fff'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'bottom' }
                }
            }
        });

        // Age Group Chart
        const ageGroupCtx = document.getElementById('ageGroupChart').getContext('2d');
        const ageGroupData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.PatientsByAgeGroup, new System.Text.Json.JsonSerializerOptions { PropertyNamingPolicy = null }));
        
        new Chart(ageGroupCtx, {
            type: 'bar',
            data: {
                labels: ageGroupData.map(d => d.AgeGroup),
                datasets: [{
                    label: 'Patients',
                    data: ageGroupData.map(d => d.Count),
                    backgroundColor: '#10b981',
                    borderRadius: 8
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });

        // Top Services Chart
        const topServicesCtx = document.getElementById('topServicesChart').getContext('2d');
        const topServicesData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.TopServices, new System.Text.Json.JsonSerializerOptions { PropertyNamingPolicy = null }));
        
        new Chart(topServicesCtx, {
            type: 'bar',
            data: {
                labels: topServicesData.map(d => d.ServiceName),
                datasets: [{
                    label: 'Consultations',
                    data: topServicesData.map(d => d.Count),
                    backgroundColor: '#f59e0b',
                    borderRadius: 5
                }]
            },
            options: {
                indexAxis: 'y',
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    x: { beginAtZero: true }
                }
            }
        });
    </script>
}
