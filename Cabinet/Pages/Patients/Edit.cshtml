@page
@model Cabinet.Pages.Patients.EditModel
@{
    ViewData["Title"] = "Modifier Patient";
}

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-warning text-dark py-3">
                <h4 class="mb-0"><i class="fa-solid fa-user-pen me-2"></i> Modifier le Dossier Patient</h4>
            </div>
            <div class="card-body p-4">
                <form method="post" autocomplete="off">
                    <input type="hidden" asp-for="Patient.IdPatient" />

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <h5 class="text-muted border-bottom pb-2 mb-3"><i class="fa-solid fa-address-card me-2"></i>Mise à jour de l'Identité</h5>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Nom *</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa-solid fa-user text-muted"></i></span>
                                <input asp-for="Patient.Nom" class="form-control" required />
                            </div>
                            <span asp-validation-for="Patient.Nom" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Prénom *</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa-solid fa-user text-muted"></i></span>
                                <input asp-for="Patient.Prenom" class="form-control" required />
                            </div>
                            <span asp-validation-for="Patient.Prenom" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label fw-bold">CIN</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa-solid fa-id-card text-muted"></i></span>
                                <input asp-for="Patient.Cin" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label fw-bold">Date de Naissance</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa-solid fa-calendar-day text-muted"></i></span>
                                <input asp-for="Patient.DateNaiss" type="date" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label fw-bold">Sexe</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa-solid fa-venus-mars text-muted"></i></span>
                                <select asp-for="Patient.Sexe" class="form-select">
                                    <option value="">Choisir...</option>
                                    <option value="M">Masculin</option>
                                    <option value="F">Féminin</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <h5 class="text-muted border-bottom pb-2 mt-4 mb-3"><i class="fa-solid fa-phone-flip me-2"></i>Contact & Localisation</h5>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Téléphone</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa-solid fa-phone text-primary"></i></span>
                                <input asp-for="Patient.Phone" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Email</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa-solid fa-envelope text-primary"></i></span>
                                <input asp-for="Patient.Email" type="email" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Adresse</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-map-location-dot text-muted"></i></span>
                            <textarea asp-for="Patient.Adresse" class="form-control" rows="2"></textarea>
                        </div>
                    </div>

                    <hr />

                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-page="./Index" class="btn btn-outline-secondary px-4 rounded-pill">
                            <i class="fa-solid fa-arrow-left me-1"></i> Annuler
                        </a>
                        <button type="submit" class="btn btn-success px-5 rounded-pill shadow-sm fw-bold">
                            <i class="fa-solid fa-user-check me-1"></i> Enregistrer les modifications
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}