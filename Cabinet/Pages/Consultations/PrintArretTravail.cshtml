@page "{id:int}"
@model Cabinet.Pages.Consultations.PrintArretTravailModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <title>Certificat d'Arrêt de Travail - @Model.Consultation.Patient?.Nom</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        @@page {
            size: A4;
            margin: 15mm;
        }

        body {
            background: #fff;
            font-family: 'Arial', sans-serif;
            color: #000;
            font-size: 14pt;
        }

        .certificate-container {
            width: 180mm;
            min-height: 257mm;
            padding: 20mm;
            margin: auto;
            border: 2px solid #000;
            position: relative;
        }

        .header-section {
            border-bottom: 2px solid #000;
            padding-bottom: 15px;
            margin-bottom: 25px;
        }

        .cabinet-info {
            font-size: 11pt;
            line-height: 1.4;
        }

        .title {
            text-align: center;
            font-size: 20pt;
            font-weight: bold;
            text-transform: uppercase;
            margin: 30px 0;
            text-decoration: underline;
        }

        .doctor-statement {
            margin: 25px 0;
            font-size: 13pt;
            line-height: 1.8;
        }

        .patient-info {
            margin: 20px 0;
            padding: 15px;
            background: #f9f9f9;
            border-left: 4px solid #000;
        }

        .dates-section {
            margin: 30px 0;
            font-size: 14pt;
            line-height: 2;
        }

        .dates-section strong {
            display: inline-block;
            width: 80px;
        }

        .motif-section {
            margin: 25px 0;
            padding: 15px;
            border: 1px solid #ccc;
            min-height: 80px;
        }

        .footer-section {
            position: absolute;
            bottom: 30mm;
            right: 30mm;
            text-align: center;
        }

        .signature-box {
            margin-top: 60px;
            padding-top: 10px;
            border-top: 2px solid #000;
            width: 200px;
            text-align: center;
        }

        @@media print {
            .no-print {
                display: none !important;
            }

            .certificate-container {
                border: none;
                padding: 0;
            }

            body {
                margin: 0;
            }
        }

        .field-label {
            font-weight: bold;
            color: #333;
        }

        .field-value {
            border-bottom: 1px dotted #666;
            display: inline-block;
            min-width: 200px;
            padding: 0 10px;
        }
    </style>
</head>
<body>
    <div class="no-print p-3 bg-dark text-white d-flex justify-content-between align-items-center">
        <div class="small fw-bold text-uppercase">Aperçu du Certificat d'Arrêt de Travail</div>
        <button onclick="window.print()" class="btn btn-primary btn-sm px-4 rounded-pill fw-bold">
            <i class="bi bi-printer-fill me-2"></i>Imprimer / PDF
        </button>
    </div>

    <div class="certificate-container">
        <!-- Header -->
        <div class="header-section">
            <div class="cabinet-info">
                <strong style="font-size: 13pt;">Cabinet Médical : @Model.Cabinet.DrName</strong><br />
                Médecin : <strong>@Model.Cabinet.DrName</strong><br />
                @if (!string.IsNullOrEmpty(Model.Cabinet.Speciality))
                {
                    <span>Spécialité : @Model.Cabinet.Speciality</span><br />
                }
                @if (!string.IsNullOrEmpty(Model.Cabinet.Address))
                {
                    <span>Adresse : @Model.Cabinet.Address</span><br />
                }
                @if (!string.IsNullOrEmpty(Model.Cabinet.Phone))
                {
                    <span>Téléphone : @Model.Cabinet.Phone</span>
                }
            </div>
        </div>

        <!-- Title -->
        <div class="title">
            Certificat d'Arrêt de Travail
        </div>

        <!-- Doctor Statement -->
        <div class="doctor-statement">
            Je soussigné(e), Docteur <span class="field-value">@Model.Cabinet.DrName</span>, certifie que :
        </div>

        <!-- Patient Information -->
        <div class="patient-info">
            <div class="mb-2">
                <span class="field-label">Nom du patient :</span>
                <span class="field-value">@Model.Consultation.Patient?.Nom @Model.Consultation.Patient?.Prenom</span>
            </div>
            <div>
                <span class="field-label">CIN :</span>
                <span class="field-value">@Model.Consultation.Patient?.Cin</span>
            </div>
        </div>

        <!-- Medical Statement -->
        <div class="doctor-statement">
            Nécessite un arrêt de travail pour raison médicale :
        </div>

        <!-- Dates Section -->
        <div class="dates-section">
            <div class="mb-3">
                <strong>Du</strong> <span class="field-value">@Model.Consultation.ArretDebut?.ToString("dd / MM / yyyy")</span>
            </div>
            <div class="mb-3">
                <strong>Au</strong> <span class="field-value">@Model.Consultation.ArretFin?.ToString("dd / MM / yyyy")</span>
            </div>
            <div>
                <strong>Soit :</strong> <span class="field-value">@Model.Consultation.ArretJours jours</span>
            </div>
        </div>

        <!-- Motif (Confidential) -->
        @if (!string.IsNullOrEmpty(Model.Consultation.ArretMotif))
        {
            <div>
                <div class="field-label mb-2">Motif médical (confidentiel) :</div>
                <div class="motif-section">
                    @Model.Consultation.ArretMotif
                </div>
            </div>
        }

        <!-- Date and Location -->
        <div class="mt-5">
            Fait à <span class="field-value">Larache</span>, le <span class="field-value">@Model.Consultation.DateConsultation?.ToString("dd / MM / yyyy")</span>
        </div>
        
        <!-- Signature -->
        <div class="footer-section">
            <div class="fw-bold mb-2">Signature et Cachet</div>
            <div class="signature-box">
                Dr. @Model.Cabinet.DrName
            </div>
        </div>
    </div>

    <script>
        // Auto-print on load (optional)
        // window.onload = function() { window.print(); }
    </script>
</body>
</html>
