@page "{id:int?}"
@model Cabinet.Pages.Services.EditModel
@{
    ViewData["Title"] = "Modifier Service";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-warning text-dark py-3">
                <h4 class="mb-0"><i class="fa-solid fa-gears me-2"></i> Modifier le Service</h4>
            </div>
            <div class="card-body p-4">
                <form method="post" autocomplete="off">
                    <input type="hidden" asp-for="Service.IdService" />

                    <div class="mb-3">
                        <label class="form-label fw-bold">Nom du Service</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-notes-medical"></i></span>
                            <input asp-for="Service.NomService" class="form-control" required />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Prix (DH)</label>
                        <div class="input-group">
                            <span class="input-group-text bg-soft-success text-success fw-bold">DH</span>
                            <input asp-for="Service.Prix" class="form-control" type="number" step="0.01" required />
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Observations</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-comment-medical"></i></span>
                            <textarea asp-for="Service.Obs" class="form-control" rows="3"></textarea>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center border-top pt-3">
                        <a asp-page="Index" class="btn btn-outline-secondary px-4 rounded-pill">
                            <i class="fa-solid fa-xmark me-1"></i> Annuler
                        </a>
                        <button type="submit" class="btn btn-success px-5 rounded-pill shadow-sm fw-bold">
                            <i class="fa-solid fa-user-check me-1"></i> Mettre à jour
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>