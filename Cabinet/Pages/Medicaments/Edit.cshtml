@page "{id:double?}"
@model Cabinet.Pages.Medicaments.EditModel
@{
    ViewData["Title"] = "Modifier Médicament";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-warning text-dark py-3">
                    <h4 class="mb-0"><i class="bi bi-capsule"></i> Modifier les détails du médicament</h4>
                </div>
                <div class="card-body p-4">
                    <form method="post" autocomplete="off">

                        @* CRITICAL: Hidden ID for the Update operation *@
                        <input type="hidden" asp-for="Medicament.Id" />

                        <h5 class="text-primary mb-3"><i class="bi bi-info-circle"></i> Identification</h5>
                        <div class="row mb-4">
                            <div class="col-md-3">
                                <label class="form-label fw-bold">Code</label>
                                <input asp-for="Medicament.Code" class="form-control" placeholder="Code Médicament" />
                            </div>
                            <div class="col-md-5">
                                <label class="form-label fw-bold text-danger">Nom Commercial *</label>
                                <input asp-for="Medicament.Nom" class="form-control" required />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold">DCI / Molécule</label>
                                <input asp-for="Medicament.Dci1" class="form-control" />
                            </div>
                        </div>

                        <h5 class="text-primary mb-3"><i class="bi bi-box-seam"></i> Forme & Dosage</h5>
                        <div class="row mb-4">
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Forme</label>
                                <input asp-for="Medicament.Forme" class="form-control" placeholder="ex: Comprimé" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Dosage</label>
                                <input asp-for="Medicament.Dosage1" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Unité</label>
                                <input asp-for="Medicament.UniteDosage1" class="form-control" placeholder="ex: mg" />
                            </div>
                        </div>

                        <h5 class="text-primary mb-3"><i class="bi bi-currency-dollar"></i> Tarification (DH)</h5>
                        <div class="row mb-4">
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Prix Public (PPV)</label>
                                <div class="input-group">
                                    <input asp-for="Medicament.Ppv" class="form-control" type="number" step="0.01" />
                                    <span class="input-group-text">DH</span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Prix Hôpital (PH)</label>
                                <input asp-for="Medicament.Ph" class="form-control" type="number" step="0.01" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Base de Remboursement</label>
                                <input asp-for="Medicament.PrixBr" class="form-control" type="number" step="0.01" />
                            </div>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-page="./Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Retour à la liste
                            </a>
                            <button type="submit" class="btn btn-success px-5 py-2">
                                <i class="bi bi-check-circle"></i> Enregistrer les modifications
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}