@page
@model IndexModel
@{
    ViewData["Title"] = "Tableau de Bord";
}

@section Styles {
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --primary-color: #4f46e5;
            --success-color: #10b981;
            --info-color: #3b82f6;
            --danger-color: #ef4444;
            --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.1);
        }

        .page-header {
            background: white;
            border-radius: 20px;
            padding: 1.5rem 2rem;
            margin-bottom: 2rem;
            box-shadow: var(--shadow-md);
            border: 1px solid rgba(79, 70, 229, 0.1);
        }

        .header-icon-wrapper {
            background: var(--primary-gradient);
            width: 60px;
            height: 60px;
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
            margin-right: 1.2rem;
        }

            .header-icon-wrapper i {
                color: white;
                font-size: 1.8rem;
            }

        .stat-card {
            border-radius: 16px;
            border: none;
            transition: transform 0.3s ease;
        }

            .stat-card:hover {
                transform: translateY(-5px);
            }

        .stat-icon {
            font-size: 3rem;
            opacity: 0.3;
        }

        .dashboard-card {
            background: white;
            border-radius: 16px;
            border: 1px solid #e2e8f0;
            box-shadow: var(--shadow-md);
            overflow: hidden;
        }

        .card-header-custom {
            padding: 1.2rem 1.5rem;
            background: #f8fafc;
            border-bottom: 1px solid #e2e8f0;
            font-weight: 700;
            color: #1e293b;
        }

        .badge-soft-danger {
            background: #fee2e2;
            color: #991b1b;
            border: 1px solid #fca5a5;
        }

        .badge-soft-primary {
            background: #eef2ff;
            color: #4338ca;
            border: 1px solid #c7d2fe;
        }

        .waiting-time {
            font-weight: 700;
            color: var(--primary-color);
        }

        .patient-name-dashboard {
            font-weight: 600;
            color: #1e293b;
        }
    </style>
}

<div class="container-fluid px-4">
    <div class="page-header mt-3 d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
            <div class="header-icon-wrapper">
                <i class="fa-solid fa-chart-line"></i>
            </div>
            <div>
                <h1 class="h3 mb-0 fw-bold text-dark" style="letter-spacing: -0.5px;">Tableau de Bord</h1>
                <p class="text-muted small mb-0">Vue d'ensemble de l'activité du cabinet</p>
            </div>
        </div>
        <div class="text-end d-none d-md-block">
            <span class="badge bg-light text-dark border rounded-pill px-4 py-2 fw-bold shadow-sm">
                <i class="fa-regular fa-calendar-check me-2 text-primary"></i>
                @DateTime.Now.ToString("dddd, dd MMMM yyyy")
            </span>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card stat-card bg-primary text-white shadow">
                <div class="card-body d-flex justify-content-between align-items-center p-4">
                    <div>
                        <h6 class="text-uppercase mb-1 small opacity-75 fw-bold">Total Patients</h6>
                        <h2 class="mb-0 fw-bold">@Model.TotalPatients</h2>
                    </div>
                    <i class="fa-solid fa-hospital-user stat-icon"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card stat-card bg-success text-white shadow">
                <div class="card-body d-flex justify-content-between align-items-center p-4">
                    <div>
                        <h6 class="text-uppercase mb-1 small opacity-75 fw-bold">Rendez-vous Jour</h6>
                        <h2 class="mb-0 fw-bold">@Model.TodayAppointments</h2>
                    </div>
                    <i class="fa-solid fa-calendar-check stat-icon"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card stat-card bg-info text-white shadow">
                <div class="card-body d-flex justify-content-between align-items-center p-4">
                    <div>
                        <h6 class="text-uppercase mb-1 small opacity-75 fw-bold">CA du Jour</h6>
                        <h2 class="mb-0 fw-bold">@Model.TodayRevenue.ToString("N0") <small class="fs-6">DH</small></h2>
                    </div>
                    <i class="fa-solid fa-hand-holding-dollar stat-icon"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 mb-4">
            <div class="dashboard-card h-100">
                <div class="card-header-custom d-flex justify-content-between align-items-center">
                    <span><i class="fa-solid fa-clock-rotate-left text-danger me-2"></i>Salle d'attente</span>
                    <span class="badge rounded-pill bg-danger shadow-sm">@Model.WaitingList.Count Patient(s)</span>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr class="small text-uppercase fw-bold text-muted">
                                <th class="ps-4">Heure</th>
                                <th>Patient</th>
                                <th>État</th>
                                <th class="text-end pe-4">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var c in Model.WaitingList)
                            {
                                <tr>
                                    <td class="ps-4 waiting-time">
                                        <i class="fa-regular fa-clock me-1"></i> @c.DateConsultation?.ToString("HH:mm")
                                    </td>
                                    <td class="patient-name-dashboard">@c.Patient?.Nom @c.Patient?.Prenom</td>
                                    <td>
                                        @if (c.Etat == "Reception")
                                        {
                                            <span class="badge bg-light text-info border border-info px-3 rounded-pill small fw-bold">Arrivé</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-light text-warning border border-warning px-3 rounded-pill small fw-bold">En Visite</span>
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        <a asp-page="/Consultations/Edit" asp-route-id="@c.IdConsultation" class="btn btn-sm btn-primary rounded-pill px-3 shadow-sm fw-bold">
                                            Ouvrir Dossier
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="dashboard-card mb-4">
                <div class="card-header-custom">
                    <i class="fa-solid fa-clipboard-list text-primary me-2"></i>Agenda du Jour
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        @foreach (var rdv in Model.UpcomingRdv)
                        {
                            <li class="list-group-item border-0 border-bottom px-4 py-3">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <div class="fw-bold text-dark small">@rdv.Nom @rdv.Prenom</div>
                                        <small class="text-muted"><i class="fa-solid fa-phone fa-xs me-1"></i> @rdv.Phone</small>
                                    </div>
                                    @* FIXED: Using standard DateTime string format *@
                                    <span class="badge badge-soft-primary rounded-pill">@rdv.DateHeure.ToString("HH:mm")</span>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
                <div class="card-footer bg-white text-center border-top-0 py-3">
                    <a asp-page="/Rendezvous/Index" class="btn btn-sm btn-outline-secondary w-100 rounded-pill fw-bold">Tout l'agenda</a>
                </div>
            </div>

            <div class="dashboard-card border-danger">
                <div class="card-header-custom" style="background: #fff5f5;">
                    <i class="fa-solid fa-triangle-exclamation text-danger me-2"></i>Alertes Stock Bas
                </div>
                <div class="card-body p-0">
                    @if (Model.LowStockItems.Any())
                    {
                        @foreach (var item in Model.LowStockItems)
                        {
                            <div class="px-4 py-3 border-bottom d-flex justify-content-between align-items-center">
                                <div style="max-width: 65%;">
                                    <div class="fw-bold text-dark small text-truncate">@item.Nom</div>
                                    <small class="text-muted d-block" style="font-size: 0.75rem;">@item.Category?.Nom</small>
                                </div>
                                <span class="badge badge-soft-danger rounded-pill fw-bold">@item.Quantite restants</span>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fa-solid fa-circle-check fa-3x text-success mb-2 opacity-25"></i>
                            <p class="text-muted small mb-0">Stock optimal</p>
                        </div>
                    }
                </div>
                <div class="card-footer bg-white border-top-0">
                    <a asp-page="/Stock/Index" class="btn btn-sm btn-light w-100 rounded-pill border fw-bold text-muted">Gérer Inventaire</a>
                </div>
            </div>
        </div>
    </div>
</div>